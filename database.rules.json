{
    "rules": {
        "subscribers": {
            ".read": false,
            ".write": false
        },
        "counters": {
            ".read": true,
            ".write": false
        },
        "waitlist": {
            ".read": false,
            ".write": true
        },
        "analytics": {
            ".read": true,
            ".write": true,
            "sessions": {
                ".indexOn": [
                    "lastSeen"
                ]
            },
            "pageViews": {
                ".indexOn": [
                    "timestamp",
                    "page",
                    "sessionId"
                ]
            }
        }
    }
}